{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Cosmos: LIBERO Eval",
            "type": "debugpy",
            "request": "launch",
            "module": "cosmos_policy.experiments.robot.libero.run_libero_eval",
            "console": "integratedTerminal",
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0",
                "PYTHONPATH": "${workspaceFolder}",
                // "UV_SKIP_INTERMEDIATE_ENTRIES": "1"
            },
            "args": [
                "--config", "cosmos_predict2_2b_480p_libero__inference_only",
                "--ckpt_path", "nvidia/Cosmos-Policy-LIBERO-Predict2-2B",
                "--config_file", "cosmos_policy/config/config.py",
                "--use_wrist_image", "True",
                "--use_proprio", "True",
                "--normalize_proprio", "True",
                "--unnormalize_actions", "True",
                "--dataset_stats_path", "nvidia/Cosmos-Policy-LIBERO-Predict2-2B/libero_dataset_statistics.json",
                "--t5_text_embeddings_path", "nvidia/Cosmos-Policy-LIBERO-Predict2-2B/libero_t5_embeddings.pkl",
                "--trained_with_image_aug", "True",
                "--chunk_size", "16",
                "--num_open_loop_steps", "16",
                "--task_suite_name", "libero_10",
                "--local_log_dir", "./logs/libero/test",
                "--randomize_seed", "False",
                "--data_collection", "False",
                "--available_gpus", "0,1,2,3,4,5,6,7",
                "--seed", "195",
                "--use_variance_scale", "False",
                "--deterministic", "True",
                "--run_id_note", "chkpt45000--5stepAct--seed195--deterministic",
                "--ar_future_prediction", "False",
                "--ar_value_prediction", "False",
                "--use_jpeg_compression", "True",
                "--flip_images", "True",
                "--num_denoising_steps_action", "5",
                "--num_denoising_steps_future_state", "1",
                "--num_denoising_steps_value", "1",
                "--save_videos", "False"
            ]
        },
        {
            "name": "Cosmos: LIBERO test",
            "type": "debugpy",
            "request": "launch",
            "program": "libero_test.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "CUDA_VISIBLE_DEVICES": "0",
                "PYTHONPATH": "${workspaceFolder}",
                // "UV_SKIP_INTERMEDIATE_ENTRIES": "1"
            },
        },
        {
            "name": "Debug Cosmos Policy Train (Multi-GPUs)",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/.venv/bin/python", 
            "module": "torch.distributed.run",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "BASE_DATASETS_DIR": "/mnt/data/data/yanzj/workspace/dataset",
            },
            "args": [
                "--nproc_per_node=8",
                "--master_port=12341",
                "-m", "cosmos_policy.scripts.train",
                "--config=cosmos_policy/config/config.py",
                "--",
                "experiment=cosmos_predict2_2b_480p_libero",
                "trainer.grad_accum_iter=8"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug Cosmos Single GPU",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/.venv/bin/python", 
            "module": "torch.distributed.run",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0",
                "BASE_DATASETS_DIR": "/mnt/data/data/yanzj/workspace/dataset",
            },
            "args": [
                "--nproc_per_node=1",
                "--master_port=12341",
                "-m", "cosmos_policy.scripts.train",
                "--config=cosmos_policy/config/config.py",
                "--",
                "experiment=cosmos_predict2_2b_480p_libero",
                "trainer.grad_accum_iter=8"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}